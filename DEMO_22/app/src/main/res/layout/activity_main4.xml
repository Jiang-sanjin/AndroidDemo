<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bz"
    android:orientation="vertical"
    tools:context="com.example.user.demo_22.Main4Activity">

    <Button
        android:id="@+id/jiantou"
        android:textSize="40dp"
        android:background="#00000000"
        android:text="&lt;"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="35dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="30dp"
            android:text="报名信息填报"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="您选择的学校："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/spinner1"
            android:entries="@array/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="您选择的专业："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/spinner2"
            android:entries="@array/zhuanye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="您选择的老师："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/spinner3"
            android:entries="@array/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
        <Button
            android:id="@+id/tijiao"
            android:text="提交"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:background="@drawable/bg"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>





</LinearLayout>
