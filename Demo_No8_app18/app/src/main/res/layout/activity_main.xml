<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w"
    android:orientation="vertical"

    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <com.example.demo_no8_app18.CustomsTextView
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="50dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boradcast APP"


        />


<!--    android:focusable="true"   // 设置是否可以获取焦点-->
<!--    android:focusableInTouchMode="true"   // 设置是否在触摸模式下获得焦点-->
    <com.example.demo_no8_app18.CustomsTextView
        android:layout_marginTop="50dp"
        android:id="@+id/btn"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="25dp"
        android:background="@drawable/btnbg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="我要看花"
        android:onClick="send1"

        />

    <com.example.demo_no8_app18.CustomsTextView
        android:id="@+id/btn2"
        android:gravity="center"

        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:background="@drawable/btnbg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="我要看表情包"
        android:onClick="send2"
        />

    <com.example.demo_no8_app18.CustomsTextView
        android:id="@+id/btn3"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:background="@drawable/btnbg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="小孩子才做选择"
        android:onClick="send3"
        />





</LinearLayout>